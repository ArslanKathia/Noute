<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/icons"
    android:layout_height="match_parent">
  <android.support.v7.widget.CardView
      android:orientation="horizontal"
      android:layout_margin="@dimen/margin_small"
      card_view:cardCornerRadius="@dimen/margin_tiny"
      card_view:cardBackgroundColor="@color/brf_white"
      card_view:cardElevation="@dimen/margin_tiny"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_alignParentRight="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <TextView
          android:id="@+id/title"
          android:layout_width="wrap_content"
          android:text="@string/clifor_example"
          android:textColor="@color/brf_black"
          android:textStyle="bold"
          android:layout_marginTop="@dimen/default_margin"
          android:layout_marginLeft="@dimen/default_margin"
          android:layout_marginRight="@dimen/default_margin"
          android:textSize="@dimen/large_font"
          android:layout_height="wrap_content"/>
      <TextView
          android:id="@+id/content"
          android:layout_width="wrap_content"
          android:text="@string/clifor_example"
          android:textColor="@color/brf_gray"
          android:layout_marginTop="@dimen/margin_tiny"
          android:layout_marginLeft="@dimen/default_margin"
          android:layout_marginRight="@dimen/default_margin"
          android:layout_marginBottom="@dimen/default_margin"
          android:layout_height="wrap_content"/>
    </LinearLayout>

  </android.support.v7.widget.CardView>
</RelativeLayout>